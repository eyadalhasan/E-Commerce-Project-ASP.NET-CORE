@model IEnumerable<Product>
@{
    // Layout = "~/Views/Shared/_Layout.cshtml";
    // Layout=null if I do not need layout and I'm using view start
}



    <div class="container mt-5">

    <h1> Product List</h1>
        <table class="table table-dark table-striped">
    <thead>
        <div>
            <a class="btn btn-primary" asp-action="create">Create new Product</a>

        </div>

     <tr>

        <th>ID</th>
        <th>Name</th>
        <th>Details</th>
         <th>Image</th>


    </tr>


</thead>

<tbody>
   
   
 @foreach(var item in Model ){
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>


                    <td>  <a asp-controller="Product" asp-action="details" asp-route-id="@item.Id" class="btn btn-info">Detials</a></td>

                    <td>
@* <img src="@item.Path" alt="No" width="50" height="50"/>
                    </td>
                    <p>@item.Path</p> *@
                    <td>  <a asp-controller="Product" asp-action="update" asp-route-id="@item.Id" class="btn btn-info">Edit</a></td>
                    <td>  <a asp-controller="Product" asp-action="delete" asp-route-id="@item.Id" class="btn btn-info">Delete</a></td>

                    </tr>
  
            }


</tbody>
    </table>

    </div>

 @section Scripts{
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
 }
 

